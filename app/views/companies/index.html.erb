<div class="row">
  <div class="col-sm-12 well">
    <% if user_signed_in? %>
      <h2 class="center">Your Companies</h2>
    <%else%>
      <h2>Some companies our users are tracking:</h2>
    <%end%>
    <div class="row company-list" id="heading">
      <div class="col-sm-3 job-list-title">
        <h3>Company</h3>
      </div>
      <div class="col-sm-3 job-list-title">
        <h3>Category</h3>
      </div>
      <div class="col-sm-3 job-list-title">
        <h3>Your Rating</h3>
      </div>
      <div class="col-sm-3 job-list-title">
        <h3>Openings</h3>
      </div>
    </div>
    <% @companies.each do |company| %>
      <div class="row company-list">
        <div class="col-sm-3 job-list-title">
          <h4><%= link_to company.name, company_path(company)%></h4>
        </div>
        <div class="col-sm-3 job-list-title">
          <h4><%= company.category%></h4>
        </div>
        <div class="col-sm-3 job-list-title">
          <h4><%= company.rating%></h4>
        </div>
        <div class="col-sm-3 job-list-title">
          <h4><%= company.jobs.length%></h4>
        </div>
      </div>
    <%end%>
  </div>
</div>
<% if user_signed_in? %>
  <%= link_to "New Company", new_company_path, :class => "btn btn-success"%>
<% end %>
