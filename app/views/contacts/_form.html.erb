<%= render "layouts/errors", :object => @contact %>

<div class="row">
  <div class="col-sm-8 well">
    <%= form_for [@company, @contact] do |f| %>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.telephone_field :phone, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :relationship %>
        <%= f.text_field :relationship, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :position %>
        <%= f.text_field :position, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :linkedIn %>
        <%= f.text_field :linkedIn, :class => "form-control" %>
      </div>
      <div class="form-group">
        <% if @companies.any? %>
          <%=f.select(:company_id) do%>
            <% @companies.each do |company|%>
              <%=content_tag(:option, company.name, value: company.id)%>
            <%end%>
          <%end%>
        <%else%>
          <p>No companies currently saved. Add company then update listing if you would like to connect contact to a company.</p>
        <%end%>
      </div>
      <%= f.submit "Save contact", :class => "btn btn-success" %>
    <% end %>
  </div>
</div>
