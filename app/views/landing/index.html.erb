<h1 class="center landing-heading">Welcome to jobMate</h1>
<% if user_signed_in? == false %>
  <div class="row landing-main">
    <div class="col-sm-5 main-page-col">
      <h4>Are you currently looking for new employement?</h4>
      <h4>Are you going to be soon?</h4>
      <h4> Do you have trouble keeping track of the jobs you're interested in and important deadlines?</h4>
      <h3 class="landing-heading">jobMate is your ideal job search tool to keep you organized.</h3>
      <ul>
        <li><h4>Store postings, contacts, resumes and cover letters.</h4></li>
        <li><h4>Harness the power of IBM's Watson to provide machine based learning insights to improve your search.</h4></li>
        <li><h4>All this and more.</h4></li>
      </ul>
      <h3 class="landing-heading"> Sign up today and get hired!</h3>
      <div class="center">
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-success" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-warning" %>
      </div>
    </div>
    <div class="col-sm-offset-1 col-sm-5 pull-right ">
      <%= image_tag('woman-41891.png', class: "img img-responsive") %>
    </div>

  </div>
<% else %>
  <div class="row landing-main">
    <div class="col-sm-6 main-page-col well">
      <h3 class="center">Upcoming Events</h3>
      <hr>
      <div class="row company-list" id="heading">
        <div class="col-sm-3 job-list-title">
          <h3>Title</h3>
        </div>
        <div class="col-sm-3 job-list-title">
          <h3>Date</h3>
        </div>
        <div class="col-sm-3 job-list-title">
          <h3>Time</h3>
        </div>
        <div class="col-sm-3 job-list-title">
          <h3>Length</h3>
        </div>
      </div>
      <% if current_user.events.any? %>
        <% current_user.events.order(date: :asc, time: :asc).each do |event| %>
        <div class="row event-list">
          <div class="col-sm-3 job-list-title">
            <h4><span class="small-screen-heading">Title: </span><%= link_to event.name, event_path(event), class: "event-titles"%></h4>
          </div>
          <div class="col-sm-3 job-list-title">
            <h4><span class="small-screen-heading">Date: </span><%= event.date %></h4>
          </div>
          <div class="col-sm-3 job-list-title">
            <h4><span class="small-screen-heading">Time: </span><%= event.time %></h4>
          </div>
          <div class="col-sm-3 job-list-title">
            <h4><span class="small-screen-heading">Length: </span><%= event.duration %></h4>
          </div>
        </div>
        <% end %>
      <%end%>
      <p class="center"><%= link_to 'New Event', new_event_path, class: "btn btn-warning" %></p>
    </div>
    <div class="col-sm-2 main-page-col">
    </div>
    <div class="col-sm-4 main-page-col well">
      <h3>What do you want to do?</h3>
      <hr>
      <h3 class="right"><%= link_to "Add a new company", new_company_path %></h3>
      <h3 class="right"><%= link_to "See your contacts", contacts_path %></h3>
      <h3 class="right"><%= link_to "See your jobs", jobs_path %></h3>
    </div>
  </div>
<% end %>

<div class="row quote">
  <div class="col-sm-6">
    <h4><%=@quotes.first.content%></h4>
    <h4 class="text-center">- <em><%=@quotes.first.author%></em></h4>
  </div>
</div>
